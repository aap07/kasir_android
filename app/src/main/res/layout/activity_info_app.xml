<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityInfoApp"
    android:orientation="vertical">

    <include
        layout="@layout/layout_toolbar_with_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="@id/guideline2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="65dp"
                                app:cardCornerRadius="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical"
                                        android:background="#2da5de"
                                        android:padding="5dp">

                                        <TextView
                                            android:id="@+id/nameApp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="125dp"
                                            android:singleLine="true"
                                            android:text="Name :"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:id="@+id/version"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="125dp"
                                            android:singleLine="true"
                                            android:text="Version :"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:id="@+id/author"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="125dp"
                                            android:singleLine="true"
                                            android:text="Author :"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:background="#2da5de"
                                        android:padding="5dp">

                                        <TextView
                                            android:id="@+id/release"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:drawableStart="@drawable/ic_calendar"
                                            android:drawablePadding="5dp"
                                            android:fontFamily="@font/aldrich"
                                            android:gravity="center"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:text="Release :"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:background="#2da5de"
                                        android:padding="5dp">

                                        <TextView
                                            android:id="@+id/update"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:drawableStart="@drawable/ic_calendar"
                                            android:drawablePadding="5dp"
                                            android:fontFamily="@font/aldrich"
                                            android:gravity="center"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:text="Update :"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:layout_marginTop="12dp"
                                        android:orientation="vertical"
                                        android:background="#2da5de"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="Fiture :"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Offline Mode"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Login Multi User"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Dine-In Method"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Take Away Method"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Payment Method"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Multi Transaksi Dine-In"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Laporan Penjualan ( Save Pdf )"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Ppn and Diskon"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="52dp"
                                            android:singleLine="true"
                                            android:text="- Print Struck with Printer BT"
                                            android:textColor="#f4f7f5"
                                            android:textSize="12dp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/aclonica"/>

                                    </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="12dp"
                                    android:orientation="vertical"
                                    android:background="#2da5de"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:text="Credits :"
                                        android:textColor="#f4f7f5"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/aclonica"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="60dp"
                                        android:singleLine="true"
                                        android:text="- Flaticon ( Icon Set )"
                                        android:textColor="#f4f7f5"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/aclonica"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="60dp"
                                        android:singleLine="true"
                                        android:text="- Google"
                                        android:textColor="#f4f7f5"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/aclonica"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="60dp"
                                        android:singleLine="true"
                                        android:text="- Stackoverflow"
                                        android:textColor="#f4f7f5"
                                        android:textSize="12dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/aclonica"/>

                                </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:id="@+id/imgVendor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/app_cashier" />

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>